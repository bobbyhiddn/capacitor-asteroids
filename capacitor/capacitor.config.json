{
  "appId": "io.codeium.asteroids",
  "appName": "ecs-asteroids",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "iosScheme": "file",
    "androidScheme": "file",
    "hostname": "app",
    "cleartext": true,
    "allowNavigation": ["*"]
  },
  "plugins": {
    "SplashScreen": {
      "launchAutoHide": true,
      "launchShowDuration": 2000,
      "backgroundColor": "#000000",
      "spinnerColor": "#FFFFFF"
    },
    "CapacitorHaptics": {
      "enabled": true
    }
  },
  "ios": {
    "orientation": "landscape"
  }
}